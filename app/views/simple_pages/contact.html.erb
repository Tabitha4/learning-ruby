
<div class="container-fluid">
  <div class="jumbotron contact-jumbotron">

    <%= image_tag("shinyLights-banner-igor-ovsyannykov-atUnsplash.jpg", class:"img-responsive my-image-contact", alt: "Shiny Bubble Lights") %>

    <h1 class="contact-title">Contact <strong>SOS</strong></h1>
    <h2>Located in the heart of the internet</h2>
    <%= flash[:notice] %>
    <%= form_with(url:"/simple_pages/thank_you", method: "post", local: true) do |form| %>
    <div class="row">
      <div class="form-group">
        <%= form.label :name %>
        <%= form.text_field :name, class: "form-control", placeholder: "Enter Name" %>
      </div>
      <div class="form-group">
        <%= form.label :email %>
        <%= form.text_field :email, class: "form-control", placeholder: "Enter Email" %>
      </div>
      <div class="form-group">
        <%= form.label :message %>
        <%= form.text_area :message, class: "form-control", placeholder: "Enter Message", rows: 5 %>
      </div>
    </div>
    <div class="form-group">
      <%= form.submit "Send", class: "form_label" %>
    </div>
    <% end %>


    <p class= "contactInfo shiny-number"><strong>Phone: 1(GET)SUM-SHINY</strong></p>
    <p class= "contactInfo shiny-email"><strong>Email: get.shiny@objects.com</strong></p>
  </div>

  <p class="final-words">C'mon, send me words</p>
  <p class="final-words last-final-words">Opinions are welcomed!</p>

</div>
