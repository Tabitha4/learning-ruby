
<div class="product-reviews">
    <% @comments.each do |comment| %>

      <div class="row">
      <hr>
        <% if signed_in? && current_user.admin? %>
          <p><%= comment.user.first_name %> <small><em><%= "#{time_ago_in_words(comment.created_at)} ago" %></em></small> <%= link_to ('<span class="glyphicon glyphicon-remove"></span>').html_safe, product_comment_path(comment.product, comment), method: :delete, data: { confirm: 'Are you sure?' } %></p>
          <p class="rated stars" data-score="<%= comment.rating %>"></p>
          <p><%= "Rating: #{comment.rating}/5" %></p>
          <p><%= comment.body %></p>
        <% end %>
      </div>

    <% end %>
</div>
