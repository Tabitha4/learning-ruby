
<div class="col-xs-12 col-md-4 col-lg-3">
  <div class="container-fluid">

    <div class="product-display">
      <p class="product-words-pic"><%= link_to image_tag(product.image_url, class: "img-responsive image-shaping"), product %></p>
      <p class="product-words-name"><%= link_to product.name, product %></p>
      <p class="product-words-description"><%= product.description %></p>
      <p class="product-words-color"><strong>Colour: </strong><%= product.colour %></p>
      <p class="product-words-price"><strong>Price: </strong>$<%= product.price %> CAD</p>
        <div class="edit_destroy_links">
          <%= link_to 'Show', product%> |
          <%= link_to 'Edit', edit_product_path(product) %> |
          <%= link_to 'Destroy', product, method: :delete, data: { confirm: 'Are you sure?' } %>
        </div>
    </div>

  </div>
</div>
