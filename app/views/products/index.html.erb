<p id="notice"><%= notice %></p>

  <!-- Jumbotron Header -->
  <header class="jumbotron img-rounded shiny-header">
    <h1 class="display-3">Make a <strong>S</strong>hiny <strong>O</strong>bjects <strong>S</strong>election</h1>
    <p class="lead">Life is better with a little shine. Grab some shiny!</p>
  </header>

  <section>
    <h2 class="sub_header" style="text-align: center"><strong>SOS Collection</strong></h2>
  </section>

  <div class="container-fluid products_wrapper">
    <div class="row text-center products_row">
      <% @products.each do |product| %>
      <div class="col-md-12 products_columns">

        <div class="card">
          <div class="product_images">
            <%= product.image_url %>
          </div>

          <div class="card-body">
            <h3 class="card-title"><%= product.name %></h3>
            <h4 class="card-text"><%= product.description %></h4>
            <h6><strong>Colour: </strong><%= product.colour %></h6>
            <h6><strong>Price: </strong>$<%= product.price %> CAD</h6>
          </div>

          <div class="card-footer take_a_peek">
            <%= link_to 'Take a Peek!', product %>
          </div>

          <div class="edit_destroy_links">
            <%= link_to 'Edit', edit_product_path(product) %> |
            <%= link_to 'Destroy', product, method: :delete, data: { confirm: 'Are you sure?' } %>
          </div>

        </div><!-- /card -->
      </div><!-- /column -->
      <% end %>
    </div><!-- /row -->
  </div><!-- /container -->


  <div class="new_product" style="text-align: center"><%= link_to 'New Product', new_product_path %></div>
  <%= image_tag("products_banner-igor-ovsyannykov-atUnsplash.jpg", class:"img-responsive product_banner", alt: "A string of shiny bubble lights that shine!") %>
