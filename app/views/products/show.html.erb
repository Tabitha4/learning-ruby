<p id="notice"><%= notice %></p>
<div class="show_products_page container-fluid">

    <p>
      <%= image_tag(@product.image_url, class: "img-responsive image-shaping" ) %>
    </p>

    <p class="show-product-name">
      <%= @product.name %>
    </p>

    <p class="product-description">
      <%= @product.description %>
    </p>

    <p>
      <strong>Colour:</strong>
      <%= @product.colour %>
    </p>

    <p class="product-price">
      <strong>Price:</strong>
      $<%= @product.price %> CAD
    </p>

    <div class="edit-back-show-page">
      <%= link_to 'Edit', edit_product_path(@product) %> |
      <%= link_to 'Back', products_path %>
    </div>

    <p class="blurb"><i>Keep checking for new Shiny's!</i></p>

</div>
