<div class="container text-center">
  <h2 class="devise-views">Forgot your Password? Meh, it happens!</h2>
  <p>Just fill out below and we'll get right on it</p>

  <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
    <%= devise_error_messages! %>

    <div class="field">
      <%= f.email_field :email, autofocus: true, placeholder: "Enter Email" %>
    </div>

    <div class="actions">
      <%= f.submit "Send me Reset Password instructions" %>
    </div>
    <% end %>

    <%= render "devise/shared/links" %>
</div>
