<div class="container text-center">
  <h2 class="devise-views">Sign Up with S.O.S</h2>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= devise_error_messages! %>

    <div class="first-last-signup">
      <%= f.label :first_name %>
      <%= f.text_field :first_name, id: :user_first_name %>
    </div>

    <div class="first-last-signup">
      <%= f.label :last_name %>
      <%= f.text_field :last_name, id: :user_last_name %>
    </div>

    <div class="field registrations-field-label">
      <%= f.email_field :email, autofocus: true, placeholder: "Enter Email" %>
    </div>

    <div class="field registrations-field-label">
      <% if @minimum_password_length %>
      <em>(<%= @minimum_password_length %> characters minimum)</em>
      <% end %><br />
      <%= f.password_field :password, autocomplete: "off", placeholder: "Enter Password" %>
    </div>

    <div class="field registrations-field-label">
      <%= f.password_field :password_confirmation, autocomplete: "off", placeholder: "Confirm Password" %>
    </div>

    <div class="actions sign-up-submit">
      <%= f.submit "Sign up" %>
    </div>
    <div class="devise-reg-new-back-link">
      <%= link_to "Back", :back %>
    </div>
    <% end %>
</div>
